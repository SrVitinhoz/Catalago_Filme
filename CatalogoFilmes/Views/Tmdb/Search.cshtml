@model CatalogoFilmes.Models.Tmdb.TmdbSearchResult

<h2>Resultados da Busca</h2>

<form method="get" action="/tmdb/search">
    <input type="text" name="query" class="form-control" placeholder="Buscar filmes..." />
</form>

<hr />

@if (Model == null)
{
    <p>Digite algo para buscar.</p>
}
else if (!Model.Results.Any())
{
    <p>Nenhum resultado encontrado.</p>
}
else
{
    <ul>
        @foreach (var filme in Model.Results)
        {
            <li>
                <a href="/tmdb/details/@filme.Id">@filme.Title</a>
                — @filme.Release_Date
            </li>
        }
    </ul>
}