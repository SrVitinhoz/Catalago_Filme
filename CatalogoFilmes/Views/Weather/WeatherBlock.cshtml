@model CatalogoFilmes.Models.WeatherInfo

<div class="p-3 bg-light rounded shadow-sm">
    <h4>🌦 Previsão do Tempo</h4>

    <p><strong>Cidade:</strong> @Model.City</p>
    <p><strong>Latitude:</strong> @Model.Latitude</p>
    <p><strong>Longitude:</strong> @Model.Longitude</p>

    <p><strong>🌡 Temperatura:</strong> @Model.Temperature °C</p>
    <p><strong>💨 Vento:</strong> @Model.WindSpeed km/h</p>

    <p class="text-muted">
        Última atualização: @Model.RetrievedAt.ToLocalTime()
    </p>
</div>